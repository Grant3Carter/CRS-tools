<Window x:Class="CRS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CRS to XML" Height="350" Width="525">
    <Grid>
        <Button Content="Refresh" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="Refresh" VerticalAlignment="Top" Width="75" Click="Refresh_Click" />
        <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Stretch" Margin="0,41,0,0" Name="dataGrid1" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" />
        <ComboBox Height="23" HorizontalAlignment="Right" Margin="0,12,12,0" Name="ShowTable" VerticalAlignment="Top" Width="127" SelectionChanged="ShowTable_SelectionChanged" />
        <Button Content="Export selected to XML" Height="23" HorizontalAlignment="Left" Margin="92,12,0,0" Name="ExportSelected" VerticalAlignment="Top" Width="154" Click="ExportSelected_Click" />
        <ProgressBar Height="11" HorizontalAlignment="Left" Margin="252,18,0,0" Name="progressBar1" VerticalAlignment="Top" Width="100" />
    </Grid>
</Window>
